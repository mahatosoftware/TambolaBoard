<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <!-- Make Leanback optional but available -->
    <uses-feature android:name="android.software.leanback" android:required="false" />
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:logo="@drawable/banner"
        android:banner="@drawable/banner"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TambolaBoard">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TambolaBoard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <!-- For Android TV -->
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />

                <!-- For normal phones -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".game.GameActivity"
            android:supportsPictureInPicture="true"
            android:resizeableActivity="true">

        </activity>

        <activity android:name=".rule.RuleSelectionActivity" />
        <activity android:name=".rule.PointsDistributionActivity" />

        <activity android:name=".rule.SummaryActivity" />

        <activity android:name=".winner.ViewWinnersActivity" />

    </application>

</manifest>
